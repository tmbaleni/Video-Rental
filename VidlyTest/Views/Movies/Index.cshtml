@model IEnumerable<VidlyTest.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", null, new { @class="btn btn-primary btn-lg"})
<br />
@if (!Model.Any())
{
    <p>We don't have any Movies yet.</p>
}
else
{
    <br />
<table class="table table-bordered table-hover" style="margin-top: 5px;">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
}
