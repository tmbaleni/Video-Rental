@model VidlyTest.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<!-- Display movie details Genre.Name, ReleaseDate, DateAdded, NumberInStock-->
<div class="row">
    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release Date: @Model.ReleaseDate</li>
        <li>Added: @Model.DateAdded</li>
        <li>Number in stock: @Model.NumberInStock</li>
    </ul>
    <div class="btn btn-default">
        @Html.ActionLink("Edit", "Edit", "Movies", new { id = Model.Id }, null)
    </div>
    <div class="btn btn-warning">
        @Html.ActionLink("Delete", "Delete", "Movies", new { id = Model.Id }, null)
    </div>
</div>
<br />
<br />
<br />
<div class="btn btn-default btn-sm">
    @Html.ActionLink("Back to List", "Index", "Movies", null, null)
</div>

