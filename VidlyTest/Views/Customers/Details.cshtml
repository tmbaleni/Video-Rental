@model VidlyTest.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div class="row">
    <ul>
        <!-- Membership Type --> 
        <li>Membership Type: @Model.MembershipType.Name</li>
        <!-- diplay birthday if not null-->
        @if (Model.Birthdate.HasValue)
        {
            <li>Birthday: @Model.Birthdate</li>
                }
    </ul>
    <div class="btn btn-default">
        @Html.ActionLink("Edit", "Edit", "Customers", new { id = Model.Id }, null)
    </div>
    <div class="btn btn-warning">
        @Html.ActionLink("Delete", "Delete", "Customers", new { id = Model.Id }, null)
    </div>
</div>
<br />
<br />
<br />
<div class="btn btn-default btn-sm">
    @Html.ActionLink("Back to List", "Index", "Customers", null, null)
</div>

